<UserControl x:Class="WpfMVCandUC.PostOperationsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfMVCandUC"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="550">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Horizontal">
            <Image Name="Heart" Source="/Icons/nolike.png" Stretch="Uniform" Margin="8" MouseDown="Heart_MouseDown"></Image>
            <Image Name="Comment" Source="/Icons/comment.png" Stretch="Uniform" Margin="8"></Image>
            <Image Name="Send" Source="/Icons/send.png" Stretch="Uniform" Margin="8"></Image>
        </StackPanel>
        <Image Name="Bookmark" Source="/Icons/bookmark.png" Margin="8" HorizontalAlignment="Right"></Image>
    </StackPanel>
</UserControl>
