<Window x:Class="WpfControlsButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlsButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <StackPanel>
        <Button x:Name="myButton" Width="100" Height="30" Click="myButton_Click" MouseDoubleClick="myButton_MouseDoubleClick" Background="AliceBlue" Foreground="Red" MouseEnter="myButton_MouseEnter" MouseLeave="myButton_MouseLeave" ToolTip="elo elo" FontStyle="Italic" FontWeight="Bold">Click Me!</Button>
        <Label Name="myLabel">Tekst</Label>
    </StackPanel>
</Window>
