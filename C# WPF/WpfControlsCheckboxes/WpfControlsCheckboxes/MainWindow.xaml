<Window x:Class="WpfControlsCheckboxes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlsCheckboxes"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel>
        <Label FontWeight="Bold">Tapoings</Label>
        <CheckBox x:Name="cbParent" IsThreeState="True" Checked="cbParent_Checked"></CheckBox>
        <CheckBox x:Name="Checkbox1" VerticalContentAlignment="Center" Checked="Checked" Unchecked="UnChecked" Margin="15">
            <WrapPanel>
                <Image Source="https://picsum.photos/200" Width="30"></Image>
                <Label x:Name="lb1">Extra cheese 1</Label>
            </WrapPanel>
        </CheckBox>
        <CheckBox x:Name="Checkbox2" Margin="15" Checked="Checked" Unchecked="UnChecked">Extra cheese 2</CheckBox>
        <CheckBox x:Name="Checkbox3" Margin="15" Checked="Checked" Unchecked="UnChecked">Extra cheese 3</CheckBox>
    </StackPanel>
</Window>
