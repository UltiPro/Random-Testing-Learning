<UserControl x:Class="WpfNavigationAndEventsDelegatesAndEvents.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfNavigationAndEventsDelegatesAndEvents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Width="80" Height="60" Click="Button_Click">-10</Button>
            <Button Width="80" Height="60" Click="Button_Click_1">+10</Button>
        </StackPanel>
        <Border Width="160"
                BorderThickness="2"
                BorderBrush="Black"
                HorizontalAlignment="Left">
        </Border>
        <TextBox Name="ValueLabel"
                 TextChanged="ValueLabel_TextChanged"
                 Width="160"
                 Height="40"
                 FontSize="20"
                 Text="50"
                 HorizontalAlignment="Left">
        </TextBox>
    </StackPanel>
</UserControl>
