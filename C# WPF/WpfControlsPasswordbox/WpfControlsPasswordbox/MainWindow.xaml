<Window x:Class="WpfControlsPasswordbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlsPasswordbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel>
        <Label FontSize="25">Name</Label>
        <TextBox></TextBox>
        <Label FontSize="25">Password</Label>
        <PasswordBox PasswordChar="3" MaxLength="4"></PasswordBox>
    </StackPanel>
</Window>
