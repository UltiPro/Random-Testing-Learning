<Window x:Class="WpfControlsTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlsTextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel>
        <TextBox FontSize="32" Margin="16" AcceptsReturn="True" TextWrapping="Wrap"/>
        <TextBox FontSize="32" Margin="16" AcceptsReturn="True" TextWrapping="NoWrap" SpellCheck.IsEnabled="True" Language="pl-PL" Background="AliceBlue" Foreground="Red" Text="Hello" IsReadOnly="True"/>
    </StackPanel>
</Window>
