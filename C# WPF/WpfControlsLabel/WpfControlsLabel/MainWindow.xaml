<Window x:Class="WpfControlsLabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlsLabel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Margin="16,16,16,0"
               BorderThickness="1"
               BorderBrush="Black">
            <StackPanel Orientation="Horizontal">
                <Image Width="60" Source="https://picsum.photos/200"></Image>
                <AccessText Text="Message" FontSize="32"></AccessText>
            </StackPanel>
        </Label>
        <TextBox FontSize="32" Margin="16"></TextBox>
    </StackPanel>
</Window>
