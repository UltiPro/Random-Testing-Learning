<Window x:Class="WpfPanelsCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPanelsCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Canvas
        Opacity="0.5">
        <Button Canvas.Left="200" Canvas.Top="100">Button 1</Button>
        <Button>Button 2</Button>
        <Rectangle Width="100" Height="100" Fill="Aqua" Canvas.Bottom="0" Panel.ZIndex="2"></Rectangle>
        <Rectangle Width="100" Height="100" Fill="Beige" Canvas.Bottom="50"></Rectangle>
    </Canvas>
</Window>
